{
	"$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
	"files": {
        "ignore": [
            "**/dist/**"
        ]
    },
    "organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
    "formatter": {
        "lineWidth": 80
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded"
        }
    }
}
